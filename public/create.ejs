              <div>
                <label class="form-label" for="title">Name of the recepie :</label>
                <input class="form-content" type="text" id="title" name="title" required>
              </div>
              <div>
                <label class="form-label" for="snippet">Specify the ingredients :</label>
                <input class="form-content" type="text" id="snippet" name="snippet" required>
              </div>
              <div>
                <label class="form-label" for="body">Specify the making process :</label>
                <input class="form-content" type="text" id="body" name="body" required>
              </div>
              <button class="bg-gray-300 text-gray-700 rounded-full px-4 py-1 absolute end-0 bottom-0 hover:shadow-inner hover:shadow-gray-400 hover:bg-gray-50">Submit</button>
            </form>
            
